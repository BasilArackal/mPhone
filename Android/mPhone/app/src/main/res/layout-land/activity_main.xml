<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainLayout"
    android:visibility="visible"
    android:background="@color/colorMainBackground"
    tools:context="com.lmntrx.mphone.MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/comingSoonLayout"
        android:background="@drawable/comingsoonpatched"
        android:visibility="invisible" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="29th Feb 2016"
            android:id="@+id/Date"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/colorLaunchDate"
            android:alpha="1"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
             />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/launcherLayout"
        android:background="@color/colorMainBackground"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/lmango"
            android:id="@+id/leftMango"
            android:layout_marginLeft="67dp"
            android:layout_marginStart="67dp"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/mPhoneText"
            android:layout_alignStart="@+id/mPhoneText"
            android:layout_marginTop="19dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rightMango"
            android:src="@drawable/rmango"
            android:layout_above="@+id/mPhoneText"
            android:layout_alignLeft="@+id/leftMango"
            android:layout_alignStart="@+id/leftMango"
            android:layout_marginLeft="60dp"
            android:layout_marginStart="60dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mPhoneText"
            android:src="@drawable/mphone"
            android:alpha="0"
            android:layout_below="@+id/leftMango"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp" />
    </RelativeLayout>

</RelativeLayout>